{
  "name": "@b4r7/cli-core",
  "version": "0.3.0",
  "description": "Shared CLI framework for registry-based CLIs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./artifacts": "./artifacts.mjs"
  },
  "files": [
    "dist",
    "artifacts.mjs"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^13.0.0",
    "figlet": "^1.8.0",
    "picocolors": "^1.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.9.0"
  },
  "license": "MIT"
}
